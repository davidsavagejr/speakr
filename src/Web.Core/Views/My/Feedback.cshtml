@model IEnumerable<Data.Models.MyFeedback>
    @{
        ViewBag.Title = "Feedback";
    }

    <h2>Feedback</h2>

<table class="table table-hover">
    <thead>
    <tr>
        <th>Talk</th>
        <th>Given On</th>
        <th>Length</th>
        <th>Feedback</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var feedback in Model)
        {
            <tr>
                <td>@Html.ActionLink(feedback.Title, "Feedback", new { feedback.Id })</td>
                <td>@feedback.StartDate</td>
                <td>@feedback.EndDate.Subtract(feedback.StartDate).ToString("g")</td>
                <td>@feedback.FeedbackCount</td>
            </tr>
        }
    </tbody>
</table>